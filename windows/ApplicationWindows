def open_social():
    """ Closes one window opens another """
    paid_window.hide()
    Socialwindow.tk.attributes("-alpha", 1)
    Socialwindow.show()
#
def close_subscription_open_paid():
    """ Closes one window opens another """
    premium.hide()
    paid_window.show()
#
def open_legal():
    """ closes one window opens another """
    Signupwindow.hide()
    legalwindow.tk.attributes("-alpha", 1)
    legalwindow.show()
#
def close_legal():
    """ Closes one window opens another """
    legalwindow.hide()
    Signupwindow.show()
    createAcc.enable()
#
